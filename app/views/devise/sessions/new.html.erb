<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-signin'} ) do |f| %>
  <h2 class="form-signin-heading">Вход</h2>

  <%= f.email_field :email, :autofocus => true, class: 'input-block-level', placeholder: 'Email адрес' %>

  <%= f.password_field :password, class: 'input-block-level', placeholder: 'Пароль' %>

  <% if devise_mapping.rememberable? -%>
    <label class="checkbox">
      <%= f.check_box :remember_me %> <%= f.label 'Запомнить меня' %>
    </label>
  <% end -%>

  <%= f.button "Войти", type: 'submit', class: 'btn btn-large btn-primary' %>
<% end %>